{
    "global_features": {
        "input_layer": "state",
        "output_layer": "Q"
    },
    
    "placeholders": [
        {
            "name": "state",
            "data_type": "float32",
            "shape": []
        },

        {
            "name": "action",
            "data_type": "int32",
            "shape": ["None"] // FIXME
        },

        {
            "name": "target_q",
            "data_type": "float32",
            "shape": ["None", "None"] // FIXME
        } 
    ],

    "layers": [
        {
            "scope": "CONV_1",
            "type": "conv2d",
            "input": "state",
            "feature_size": 8, 
            "kernel_size": [6, 6],
            "stride": [3, 3],
            "data_format": "NCHW"
        },

        {
            "scope": "CONV_2",
            "type": "conv2d",
            "input": "CONV_1",
            "feature_size": 8, 
            "kernel_size": [6, 6],
            "stride": [3, 3],
            "data_format": "NCHW"
        },

        {
            "scope": "CONV_2_FLAT",
            "type": "flatten",
            "input": "CONV_2"
        },

        {
            "scope": "FC_1",
            "type": "fully_connected",
            "input": "CONV_2_FLAT",
            "layer_size": 128
        },

        {
            "scope": "Q",
            "type": "fully_connected",
            "input": "FC_1"
        }
    ],

    "ops": [
        {
            "name": "best_action",
            "op": "argmax",
            "input": "Q",
            "axis": 1
        },

        {
            "name": "loss",
            "op": "mean_squared_error",
            "input": "Q",
            "axis": 1
        }
    ]
}